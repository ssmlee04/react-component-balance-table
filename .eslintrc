{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "semi": [2, "always"],
    "key-spacing"          : "off",
    "react/prop-types"          : 0,
    "handle-callback-err"          : 0,
    "space-before-function-paren"          : 0,
    "react/jsx-closing-bracket-location": 2,
    "react/no-unused-prop-types"          : 0,
    "react/jsx-no-bind"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 200, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off"
  }
}
